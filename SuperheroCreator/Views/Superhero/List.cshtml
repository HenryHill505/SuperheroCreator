@model IEnumerable<SuperheroCreator.Models.Superhero>

@{
    ViewBag.Title = "Heroes";
}

<img class="img-rounded" src="https://78.media.tumblr.com/tumblr_l9kh52E7MO1qzb9rso1_500.png" />

<div class="hero-table-container">

    <table class="hero-table">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.HeroName, "Details", new { id = item.Id })
                </td>
            </tr>
        }
    </table>

    <p class="add-hero-link">
        @Html.ActionLink("Add New Hero", "Create")
    </p>
</div>
